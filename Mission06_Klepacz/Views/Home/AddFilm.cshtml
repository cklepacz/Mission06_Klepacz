@model AddMovie

<div class="text-center">
    <h1 class="display-4">Add a film to the collection</h1>
    <p>(Good movies only please)</p>
    <img src="~/img/fineaddition.jpg" height="250"/>
    <br />
    <br />
    <br />

    <form method="post">

        <input type="hidden" asp-for="MovieId" />

        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />
        <label asp-for="Title">Movie Title:</label>
        <input asp-for="Title" />
        <br />
        <label asp-for="Year">Relase Year:</label>
        <input asp-for="Year" />
        <br />
        <label asp-for="Director">Director Name:</label>
        <input asp-for="Director" />
        <br />
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="NR">NR</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="UR">UR</option>
            <option value="TV-Y">TV-Y</option>
            <option value="TV-Y7">TV-Y7</option>
            <option value="TV-G">TV-G</option>
            <option value="TV-PG">TV-PG</option>
            <option value="TV-14">TV-14</option>
            <option value="TV-MA">TV-MA</option>
        </select>
        <br />
        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <br />
        <label asp-for="LentTo">Lent to:</label>
        <input asp-for="LentTo" />
        <br />
        <label asp-for="CopiedToPlex">Copied to Plex:</label>
        <select asp-for="CopiedToPlex">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <br />
        <label asp-for="Notes">Notes:</label>
        <textarea asp-for="Notes" maxlength="25"></textarea>
        <br />
        <button type="submit">Submit Movie</button>

        <div asp-validation-summary="All"></div>
    </form>
</div>